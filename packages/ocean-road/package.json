{
  "name": "@coldsurfers/ocean-road",
  "version": "1.11.1-rc.0",
  "license": "MIT",
  "main": "src/index.ts",
  "react-native": "src/index.ts",
  "module": "src/index.ts",
  "source": "src/",
  "types": "src/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./*.css": {
      "import": "./src/css/*.css",
      "require": "./src/css/*.css"
    },
    "./native": {
      "import": "./src/native/index.ts",
      "require": "./src/native/index.ts"
    }
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "rm -rf dist && yarn tsc && rollup -c ./rollup.config.js && cp -R ./src/css ./dist",
    "lint": "yarn eslint 'src/**/*.ts' 'src/**/*.tsx' --cache",
    "prerelease": "yarn build",
    "prerelease:rc": "yarn build",
    "release": "release-it minor --ci",
    "release:rc": "release-it --ci --preRelease=rc"
  },
  "dependencies": {
    "@coldsurfers/design-tokens": "workspace:*"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.4",
    "@emotion/css": "*",
    "@emotion/native": "*",
    "@emotion/react": "*",
    "@emotion/styled": "*",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "8.57.0",
    "framer-motion": "*",
    "lucide-react-native": "*",
    "prettier": "*",
    "react": "*",
    "react-dom": "*",
    "react-native-reanimated": "*",
    "react-native-svg": "*",
    "react-spinners": "*",
    "release-it": "*",
    "rollup": "^3.20.7",
    "rollup-plugin-import-css": "^3.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "*"
  },
  "peerDependencies": {
    "@emotion/css": "*",
    "@emotion/native": "*",
    "@emotion/react": "*",
    "@emotion/styled": "*",
    "framer-motion": "*",
    "lucide-react-native": "*",
    "react": "*",
    "react-dom": "*",
    "react-native-reanimated": "*",
    "react-native-svg": "*",
    "react-spinners": "*"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release @coldsurfers/ocean-road v${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:git:release": "git reset --hard HEAD"
    }
  }
}

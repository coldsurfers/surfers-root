{
  "name": "@coldsurfers/cloudinary-utils",
  "version": "1.0.3",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "source": "src/",
  "files": [
    "src",
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@coldsurfers/shared-utils": "workspace:*",
    "@types/sha1": "^1.1.5",
    "axios": "1.6.3",
    "form-data": "^4.0.0",
    "fs": "^0.0.1-security",
    "prettier": "*",
    "release-it": "17.2.1",
    "sha1": "^1.1.1",
    "stream": "^0.0.2",
    "tsdown": "^0.11.9",
    "typescript": "5.6.3",
    "util": "^0.12.5"
  },
  "scripts": {
    "build": "rm -rf dist && tsdown",
    "prerelease": "yarn build",
    "prerelease:rc": "yarn build",
    "release": "release-it minor --ci",
    "release:rc": "release-it --ci --preRelease=rc",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release @coldsurfers/cloudinary-utils v${version}",
      "tagName": "cloudinary-utils-v${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:git:release": "git reset --hard HEAD"
    }
  },
  "peerDependencies": {
    "axios": ">= 1.6.3",
    "form-data": "^4.0.0",
    "fs": "^0.0.1-security",
    "sha1": "^1.1.1",
    "stream": "^0.0.2",
    "util": "^0.12.5"
  },
  "dependencies": {
    "@coldsurfers/shared-utils": "workspace:*"
  }
}

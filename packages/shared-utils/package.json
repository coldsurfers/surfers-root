{
  "name": "@coldsurfers/shared-utils",
  "version": "1.1.3",
  "private": true,
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "source": "src/",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prerelease": "yarn build",
    "release": "release-it minor --ci",
    "prerelease:rc": "yarn build",
    "release:rc": "release-it --ci --preRelease=rc"
  },
  "dependencies": {
    "slugify": "1.6.6"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "jwt-decode": "^4.0.0",
    "prettier": "^3.2.4",
    "release-it": "17.2.1",
    "schema-dts": "1.1.2",
    "typescript": "5.6.3",
    "zod": "3.23.8"
  },
  "peerDependencies": {
    "jwt-decode": "^4.0.0",
    "schema-dts": "^1.1.2",
    "zod": "^3.23.8"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release @coldsurfers/cloudinary-utils v${version}",
      "tagName": "shared-utils-v${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:git:release": "git reset --hard HEAD"
    }
  }
}

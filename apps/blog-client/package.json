{
  "name": "@coldsurfers/blog-client",
  "version": "0.1.1",
  "author": "Samuel Kraft <samuelkraft@me.com> (https://github.com/samuelkraft)",
  "contributors": [
    "Samuel Kraft <samuelkraft@me.com> (https://github.com/samuelkraft)",
    "Adam Beleko <bossbele@larven.io> (https://github.com/BossBele)"
  ],
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=4096' next build",
    "sitemap": "next-sitemap",
    "deploy": "yarn sitemap && pm2 start ecosystem.config.js",
    "deploy:prebuilt": "npx vercel build --prod && npx vercel deploy --prod --prebuilt",
    "dev": "next dev",
    "lint": "next lint --fix && prettier --write .",
    "start": "next start",
    "prisma:generate": "yarn prisma generate --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:db-push": "yarn prisma db push --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:migrate": "yarn prisma migrate dev --schema ../../packages/prisma-schema/prisma/schema.prisma"
  },
  "dependencies": {
    "@coldsurfers/cloudinary-utils": "workspace:*",
    "@coldsurfers/hotsurf": "workspace:*",
    "@coldsurfers/notion-utils": "^1.0.1-rc.10",
    "@coldsurfers/ocean-road": "1.11.1-rc.0",
    "@coldsurfers/shared-utils": "workspace:*",
    "@notionhq/client": "^2.2.3",
    "@prisma/client": "^5.19.0",
    "axios": "^1.4.0",
    "date-fns": "^3.6.0",
    "form-data": "^4.0.0",
    "html2pdf.js": "^0.10.2",
    "next": "14.2.3",
    "next-sitemap": "^4.2.3",
    "nextjs-sitemap-generator": "^1.3.1",
    "prisma": "^5.19.0",
    "prismjs": "1.29.0",
    "react": "*",
    "react-dom": "*",
    "react-native": "*",
    "react-native-web": "*",
    "react-tweet": "^3.2.0",
    "sha1": "^1.1.1",
    "styled-components": "*",
    "ts-pattern": "*",
    "zod": "^3.23.8",
    "zustand": "*"
  },
  "devDependencies": {
    "@coldsurfers/prisma-schema": "workspace:*",
    "@next/eslint-plugin-next": "^13.4.16",
    "@types/prismjs": "~1.26.3",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/react-native": "*",
    "@types/sha1": "~1.1.5",
    "encoding": "^0.1.13",
    "eslint": "*",
    "pm2": "*",
    "prettier": "*",
    "typescript": "*"
  },
  "resolutions": {
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.19"
  },
  "packageManager": "yarn@4.2.2"
}

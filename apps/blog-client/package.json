{
  "name": "@coldsurfers/blog-client",
  "version": "2.0.1",
  "scripts": {
    "build": "next build",
    "deploy": "yarn sitemap && pm2 start ecosystem.config.js",
    "deploy:prebuilt": "npx vercel build --prod && npx vercel deploy --prod --prebuilt",
    "dev": "next dev",
    "lint:fix": "next lint --fix && prettier --write .",
    "prisma:db-push": "yarn prisma db push --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:generate": "yarn prisma generate --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:migrate": "yarn prisma migrate dev --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "start": "next start",
    "start:standalone": "cp -r public .next/standalone/apps/blog-client/public && cp -r .next/static .next/standalone/apps/blog-client/.next/static && node .next/standalone/apps/blog-client/server.js"
  },
  "dependencies": {
    "@coldsurfers/cloudinary-utils": "workspace:*",
    "@coldsurfers/design-tokens": "workspace:*",
    "@coldsurfers/ocean-road": "workspace:*",
    "@coldsurfers/shared-utils": "workspace:*",
    "@emotion/css": "*",
    "@emotion/react": "*",
    "@emotion/styled": "*",
    "@lukemorales/query-key-factory": "*",
    "@notionhq/client": "*",
    "@prisma/client": "^5.19.0",
    "@tanstack/react-query": "*",
    "date-fns": "^3.6.0",
    "framer-motion": "*",
    "html2pdf.js": "^0.10.2",
    "ky": "^1.7.2",
    "lucide-react": "*",
    "next": "15.1.7",
    "next-intl": "^3.24.0",
    "notion-client": "*",
    "prisma": "^5.19.0",
    "prismjs": "1.29.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-notion-x": "*",
    "react-spinners": "*",
    "react-tweet": "^3.2.0",
    "ts-pattern": "*",
    "zod": "^3.23.8",
    "zustand": "*"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "15.1.7",
    "@types/prismjs": "^1.26.5",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "encoding": "^0.1.13",
    "eslint": "8.57.0",
    "notion-types": "*",
    "prettier": "*",
    "sst": "*",
    "typescript": "*"
  },
  "resolutions": {
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3"
  },
  "packageManager": "yarn@4.2.2"
}

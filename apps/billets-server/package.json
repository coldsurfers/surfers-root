{
  "name": "@coldsurfers/billets-server",
  "version": "1.1.7",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "prebuild": "yarn clean",
    "build": "yarn tsup",
    "dev": "tsup --watch",
    "watch": "tsup --watch --onSuccess 'node ./build/start-server.mjs'",
    "debug:vercel": "npx vercel dev --listen 3001",
    "debug": "npx nodemon",
    "deploy:vercel": "vercel",
    "deploy": "pm2 start ecosystem.config.js",
    "clean": "del build",
    "lint": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\" \"vercel/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "yarn lint --fix",
    "prisma:db-push": "yarn prisma db push --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:migrate-dev": "yarn prisma migrate dev --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:studio": "yarn prisma studio --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:generate": "yarn prisma generate --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "vercel:sync-env": "vercel env pull",
    "serverless:offline": "npx serverless offline --httpPort 3001",
    "serverless:deploy:dev": "yarn prisma:generate && cp -R ../../node_modules/.prisma ./node_modules/.prisma && npx serverless deploy --stage dev",
    "serverless:deploy:prod": "yarn prisma:generate && cp -R ../../node_modules/.prisma ./node_modules/.prisma && npx serverless deploy --stage prod"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn run lint:fix",
      "bash -c 'yarn build --noEmit'"
    ]
  },
  "dependencies": {
    "@coldsurfers/prisma-schema": "workspace:*",
    "@coldsurfers/zod-schema": "workspace:*",
    "@fastify/aws-lambda": "^5.0.0",
    "@fastify/cors": "*",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@prisma/client": "*",
    "@vercel/node": "^2.9.0",
    "axios": "*",
    "crypto-js": "4.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.0.3",
    "fastify": "*",
    "fastify-type-provider-zod": "^3.0.0",
    "google-auth-library": "^9.14.1",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.1.0",
    "jwt-decode": "^3.1.2",
    "ngeohash": "*",
    "nodemailer": "^6.9.14",
    "nodemailer-smtp-transport": "^2.7.4",
    "ts-pattern": "*",
    "zod": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/crypto-js": "^4.1.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/ngeohash": "*",
    "@types/nodemailer": "^6.4.15",
    "@types/nodemailer-smtp-transport": "^2.7.8",
    "del-cli": "*",
    "eslint": "*",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "pm2": "*",
    "prettier": "*",
    "prisma": "*",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^14.4.0",
    "serverless-plugin-monorepo": "^0.11.0",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.3.5",
    "typescript": "*"
  },
  "packageManager": "yarn@4.2.2"
}

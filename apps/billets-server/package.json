{
  "name": "@coldsurfers/billets-server",
  "version": "1.2.8",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "postinstall": "pnpm prisma:generate",
    "prebuild": "pnpm clean",
    "build": "tsup",
    "dev": "tsup --watch",
    "watch": "tsup --watch --onSuccess 'node ./build/start-server.js'",
    "debug": "npx nodemon",
    "deploy": "pm2 start ecosystem.config.js",
    "clean": "rm -rf build",
    "lint": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "pnpm lint --fix",
    "prisma:db-push": "pnpm prisma db push --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:migrate-dev": "pnpm prisma migrate dev --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:studio": "pnpm prisma studio --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:generate": "pnpm prisma generate --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "serverless:offline": "npx serverless offline --httpPort 3001",
    "serverless:deploy:dev": "pnpm install:sharp && pnpm build && pnpm prisma:generate && cp -R ../../node_modules/.prisma ./node_modules/.prisma && npx serverless deploy --stage dev",
    "serverless:deploy:prod": "pnpm install:sharp && pnpm build && pnpm prisma:generate && cp -R ../../node_modules/.prisma ./node_modules/.prisma && npx serverless deploy --stage prod",
    "circular": "dpdm ./src/start-server.ts",
    "install:sharp": "node ./src/scripts/install-sharp.mjs"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn run lint:fix",
      "bash -c 'yarn build --noEmit'"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.726.1",
    "@coldsurfers/prisma-schema": "workspace:*",
    "@coldsurfers/zod-schema": "workspace:*",
    "@fastify/aws-lambda": "*",
    "@fastify/cors": "*",
    "@fastify/jwt": "^9.0.2",
    "@fastify/rate-limit": "^10.2.1",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@img/sharp-libvips-linux-x64": "1.0.4",
    "@img/sharp-linux-x64": "0.33.5",
    "@prisma/client": "*",
    "axios": "*",
    "crypto-js": "4.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.0.3",
    "fastify": "5.0.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^3.0.0",
    "google-auth-library": "^9.14.1",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.1.0",
    "jwt-decode": "^3.1.2",
    "ngeohash": "*",
    "nodemailer": "^6.9.14",
    "nodemailer-smtp-transport": "^2.7.4",
    "sharp": "0.33.5",
    "ts-pattern": "*",
    "zod": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/crypto-js": "^4.1.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/ngeohash": "*",
    "@types/nodemailer": "^6.4.15",
    "@types/nodemailer-smtp-transport": "^2.7.8",
    "@types/xml2js": "^0",
    "del-cli": "*",
    "dpdm": "^3.14.0",
    "eslint": "8.57.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "node-fetch": "^3.3.2",
    "pm2": "*",
    "prettier": "*",
    "prisma": "*",
    "serverless-dotenv-plugin": "*",
    "serverless-offline": "*",
    "serverless-plugin-monorepo": "*",
    "tar": "^7.4.3",
    "ts-node-dev": "^2.0.0",
    "tsup": "*",
    "typescript": "*",
    "xml2js": "^0.6.2"
  }
}

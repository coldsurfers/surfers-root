{
  "name": "@coldsurfers/billets-server",
  "version": "1.2.9",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "postinstall": "pnpm prisma:generate",
    "prebuild": "pnpm clean",
    "build": "tsup",
    "dev": "tsup --watch",
    "watch": "tsup --watch --onSuccess 'node ./build/start-server.js'",
    "clean": "rm -rf build",
    "lint": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "pnpm lint --fix",
    "prisma:db-push": "pnpm prisma db push --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:migrate-dev": "pnpm prisma migrate dev --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:studio": "pnpm prisma studio --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:generate": "pnpm prisma generate --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "serverless:offline": "npx serverless offline --httpPort 3001",
    "serverless:package": "node ./src/scripts/serverless-pre-build.mjs && npx serverless package",
    "serverless:deploy:dev": "node ./src/scripts/serverless-pre-build.mjs && npx serverless deploy --stage dev",
    "serverless:deploy:prod": "node ./src/scripts/serverless-pre-build.mjs && npx serverless deploy --stage prod",
    "circular": "dpdm ./src/start-server.ts",
    "install:sharp": "node ./src/scripts/install-sharp.mjs"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.726.1",
    "@fastify/aws-lambda": "5.0.0",
    "@fastify/cors": "10.0.1",
    "@fastify/jwt": "9.0.2",
    "@fastify/rate-limit": "10.2.1",
    "@fastify/swagger": "9.0.0",
    "@fastify/swagger-ui": "5.0.1",
    "@img/sharp-libvips-linux-x64": "1.0.4",
    "@img/sharp-linux-x64": "0.33.5",
    "@prisma/client": "5.21.1",
    "axios": "1.6.3",
    "crypto-js": "4.2.0",
    "date-fns": "4.1.0",
    "dotenv": "16.0.3",
    "fastify": "5.0.0",
    "fastify-plugin": "5.0.1",
    "fastify-type-provider-zod": "3.0.0",
    "google-auth-library": "9.14.1",
    "jsonwebtoken": "9.0.0",
    "jwks-rsa": "3.1.0",
    "jwt-decode": "3.1.2",
    "ngeohash": "0.6.3",
    "nodemailer": "6.9.14",
    "nodemailer-smtp-transport": "2.7.4",
    "sharp": "0.33.5",
    "slugify": "^1.6.6",
    "ts-pattern": "5.4.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/crypto-js": "^4.1.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/ngeohash": "*",
    "@types/nodemailer": "^6.4.15",
    "@types/nodemailer-smtp-transport": "^2.7.8",
    "@types/xml2js": "^0",
    "del-cli": "*",
    "dpdm": "^3.14.0",
    "eslint": "8.57.0",
    "fs-extra": "^11.3.0",
    "js-yaml": "^4.1.0",
    "node-fetch": "2.7.0",
    "pm2": "*",
    "prettier": "*",
    "prisma": "5.21.1",
    "serverless-dotenv-plugin": "6.0.0",
    "serverless-offline": "14.4.0",
    "serverless-plugin-monorepo": "0.11.0",
    "tar": "^7.4.3",
    "ts-node-dev": "^2.0.0",
    "tsup": "8.3.5",
    "typescript": "5.6.3",
    "xml2js": "^0.6.2"
  }
}

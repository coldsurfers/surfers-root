{
  "name": "@coldsurfers/wamuseum-server",
  "version": "1.0.4",
  "private": true,
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf build && tsup && cp -r ./assets ./build/assets",
    "codegen": "graphql-codegen --config ./gql/codegen.yml",
    "check:type": "tsc --noEmit",
    "dev": "NODE_ENV=development pnpm watch",
    "watch": "tsup --watch --onSuccess 'node ./build/start-server.js'",
    "dev:file-upload": "ts-node-dev --respawn --transpile-only ./src/dev-server/file-upload-server.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prisma:db-push": "pnpm prisma db push --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "prisma:generate": "pnpm prisma generate --schema ../../packages/prisma-schema/prisma/schema.prisma",
    "serverless:offline": "npx serverless offline --httpPort 3003",
    "serverless:deploy:dev": "node ./src/scripts/serverless-pre-build.mjs && npx serverless deploy --stage dev",
    "serverless:deploy:prod": "node ./src/scripts/serverless-pre-build.mjs && npx serverless deploy --stage prod",
    "install:sharp": "node ./src/scripts/install-sharp.mjs"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@as-integrations/fastify": "^2.1.1",
    "@aws-sdk/client-s3": "^3.254.0",
    "@aws-sdk/s3-presigned-post": "^3.254.0",
    "@coldsurfers/shared-utils": "workspace:*",
    "@fastify/aws-lambda": "5.0.0",
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "10.0.1",
    "@graphql-codegen/cli": "2.16.1",
    "@graphql-codegen/introspection": "2.2.3",
    "@graphql-codegen/typescript": "2.8.5",
    "@graphql-codegen/typescript-resolvers": "2.7.10",
    "@prisma/client": "5.21.1",
    "crypto-js": "4.2.0",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "fastify": "5.0.0",
    "firebase-admin": "^13.0.1",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^3.1.2",
    "ngeohash": "0.6.3",
    "nodemailer": "^6.8.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "uuidv4": "^6.2.13",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/crypto-js": "^4.1.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/ngeohash": "*",
    "@types/node": "20.12.0",
    "@types/nodemailer": "^6.4.7",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "prisma": "5.21.1",
    "serverless-dotenv-plugin": "6.0.0",
    "serverless-offline": "14.4.0",
    "serverless-plugin-monorepo": "0.11.0",
    "ts-node-dev": "^2.0.0",
    "tsup": "8.3.5",
    "typescript": "5.6.3"
  }
}

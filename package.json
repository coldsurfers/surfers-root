{
  "name": "@coldsurfers/surfers-root",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@10.4.1",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/eslint",
      "**/eslint/**"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "patch-package",
    "deploy:blog": "yarn workspace @coldsurfers/blog-client deploy",
    "start:billets-web": "yarn workspace @coldsurfers/billets-web start",
    "dev:billets-web": "yarn workspace @coldsurfers/billets-web dev",
    "dev:wamuseum-server": "yarn workspace @coldsurfers/wamuseum-server debug",
    "dev:wamuseum-client": "yarn workspace @coldsurfers/wamuseum-client dev",
    "dev:billets-server": "yarn workspace @coldsurfers/billets-server debug",
    "prisma:generate": "yarn workspace @coldsurfers/prisma-schema generate",
    "check:runtime": "node ./scripts/check-runtime-env.js",
    "clean": "turbo run clean --parallel && sh ./scripts/clean-modules.sh"
  },
  "resolutions": {
    "@fastify/error": "4.0.0"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.12.1",
    "@types/ngeohash": "0.6.8",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "@yarnpkg/sdks": "^3.2.0",
    "del-cli": "^6.0.0",
    "detect-libc": "2.0.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "pm2": "5.4.2",
    "prettier": "3.2.5",
    "prisma": "5.21.1"
  },
  "dependencies": {
    "@prisma/client": "5.21.1",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "turbo": "2.4.2"
  },
  "pnpm": {
    "patchedDependencies": {
      "react-notion-x@7.2.5": "patches/react-notion-x@7.2.5.patch",
      "@shopify/react-native-performance@4.1.2": "patches/@shopify__react-native-performance@4.1.2.patch"
    }
  }
}

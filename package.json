{
  "name": "@coldsurfers/surfers-root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "check:runtime": "node ./scripts/check-runtime-env.js",
    "clean": "turbo run clean --parallel && sh ./scripts/clean-modules.sh",
    "postinstall": "patch-package",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "eslintIgnore": ["node_modules/", "dist/", "build/", "package/"],
  "resolutions": {
    "@fastify/error": "4.0.0",
    "@types/react": "18.2.67",
    "@types/react-dom": "18.2.22"
  },
  "dependencies": {
    "@prisma/client": "5.21.1",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "turbo": "2.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@types/ngeohash": "0.6.8",
    "@yarnpkg/sdks": "^3.2.0",
    "commitlint": "^17.0.2",
    "del-cli": "^6.0.0",
    "detect-libc": "2.0.3",
    "pm2": "5.4.2",
    "prettier": "3.2.5",
    "prisma": "5.21.1"
  },
  "packageManager": "pnpm@10.4.1",
  "pnpm": {
    "patchedDependencies": {
      "react-notion-x@7.2.5": "patches/react-notion-x@7.2.5.patch"
    }
  }

{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["pnpm-lock.yaml"],
  "tasks": {
    "@coldsurfers/ocean-road-design-tokens#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@coldsurfers/ocean-road#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@coldsurfers/infinite-carousel#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@coldsurfers/shared-utils#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@coldsurfers/cloudinary-utils#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@coldsurfers/openapi-client#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@coldsurfers/billets-cron#dev": {
      "dependsOn": ["^build"]
    },
    "@coldsurfers/billets-server#dev": {
      "dependsOn": ["^build"]
    },
    "@coldsurfers/billets-web#deploy:coldsurf-io:prod": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:ui": {
      "dependsOn": ["@coldsurfers/ocean-road-design-tokens#build", "@coldsurfers/ocean-road#build"],
      "outputs": ["dist/**"]
    },
    "build:packages": {
      "dependsOn": [
        "@coldsurfers/shared-utils#build",
        "@coldsurfers/cloudinary-utils#build",
        "@coldsurfers/openapi-client#build",
        "@coldsurfers/infinite-carousel#build"
      ],
      "outputs": ["dist/**"]
    },
    "deploy:coldsurf-server:prod": {
      "dependsOn": ["build"],
      "cache": false
    },
    "deploy:coldsurf-server:dev": {
      "dependsOn": ["build"],
      "cache": false
    },
    "deploy:coldsurf-io:prod": {
      "dependsOn": [
        "build:packages",
        "build:ui",
        "@coldsurfers/billets-web#deploy:coldsurf-io:prod"
      ],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "format:fix": {
      "outputs": []
    },
    "check": {
      "outputs": []
    },
    "check:fix": {
      "outputs": []
    },
    "check:type": {
      "dependsOn": ["build:ui", "build:packages"],
      "cache": true
    },
    "sync-server": {
      "dependsOn": ["@coldsurfers/billets-cron#dev", "@coldsurfers/billets-server#dev"],
      "cache": false
    },
    "syncup": {
      "dependsOn": ["^syncup"],
      "cache": false
    },
    "fill-venue-slug": {
      "dependsOn": ["^fill-venue-slug"],
      "cache": false
    }
  }
}
